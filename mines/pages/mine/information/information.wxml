<!--pages/information/information.wxml-->
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data> 
    </view>
  </view>
    <view class='item'>
      <text class='left'>姓名：</text><text class='right'>{{myinfo.name}}</text>
    </view>
    <view class='item'>
      <text class='left'>学号：</text><text class='right'>{{myinfo.studentId}}</text>
    </view>
    <view class='item'>
     <text class='left'>电话号码：</text><text class='right'>{{myinfo.phone}}</text>
    </view>
  <view class='item'>
     <text class='left'>评分：</text><text class='right'>{{myinfo.rate}}</text>
    </view>
      <view class='item'>
     <text class='left'>创建时间：</text><text class='right'>{{myinfo.created_date}}</text>
    </view>
      <view class='item'>
     <text class='left'>发单剩余：</text><text class='right'>{{myinfo.sended_order_count}}</text>
    </view>
     <view class='item'>
     <text class='left'>接单剩余：</text><text class='right'>{{myinfo.received_order_count}}</text>
    </view>
   
</view>