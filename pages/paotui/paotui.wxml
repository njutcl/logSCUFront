<view><button class="btn" bindtap="wangjiang1">望江</button></view>
<view><button class="btn" bindtap="huaxi1">华西</button></view>
</swiper-item>
<swiper-item>
<view><button class="btn" bindtap="jiangan2">江安</button></view>
