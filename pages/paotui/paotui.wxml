<image class='mine-bg' src='/img/mine/ke.jpg'></image>
<view class="page">
  <view class="youhui">
  <view class="{{_num==0?'active':''}}" data-index='0' bindtap='toggle'>
    可顺带
  </view>
  <view class="{{_num==1?'active':''}}" data-index='1' bindtap='toggle'>
    需要顺带
