/* pages/order/send/send.wxss */

.send-container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #f6f7f8;
  padding-top: 10rpx;
}

.send-list {
  position: relative;
  width: 700rpx;
  height: 150rpx;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
}
.send-largeList{
  position: relative;
  margin: 20rpx auto;
  width: 700rpx;
  height: 300rpx;
}
.send-listPart2 {
  background-color: #e3f2fd;
}
.send-listPart6 {
  background-color: #ffffff;
}
.send-infomation{
  position: relative;
  margin-left: 50rpx;
  width: 650rpx;
  display: flex;
  align-items: center;
}
.send-text{
  width:100rpx;
}
.send-text2 {
  color: #1976d2;
}
.send-text6{
  color: #d1cfcf;
}

.send-line{
  position: absolute;
  width: 5rpx;
  height: 50rpx;
  left: 250rpx;
}
.send-line2{
  background-color: #bbdefb;
}
.send-line6{
  background-color: #98d8d4;
}
.send-input{
  position: absolute;
  width: 380rpx;
  height: 50rpx;
  left: 260rpx;
  display: flex;
  align-items: center;
}
.send-input2 {
  width: 400rpx;
  color: #1976d2;
}
.send-input6{
  color: #d1cfcf;
}
.shortInput{
  width:100rpx;
}
.longInput{
  width:500rpx;
}
button::after{ 
	border: none; 
  border-radius: 0;
}
.btn {
position: fixed;
bottom: 0;
border-radius: 0;
width: 100%;
background-color: #7e57c2;
color: #ffffff;
font-size: 45rpx;
}
.radio-group{
  display: flex;
  align-items: center;
}
radio{
  margin-left: 20rpx;
}
textarea{
  width: 700rpx;
  height: 300rpx;
}

