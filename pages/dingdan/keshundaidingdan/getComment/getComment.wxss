/* pages/order/getComment/getComment.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  position: relative;
  width: 100%;
  height: 100%;
}
.mine-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
#talkbubble1 {
  width: 580rpx;
  background: #1976d2;
  position: absolute;
  top: 100rpx;
  right: 25rpx;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

#talkbubble1:before {
  content: "";
  position: absolute;
  right: 100%;
  top: 75rpx;
  width: 0;
  height: 0;
  border-top: 13rpx solid transparent;
  border-right: 26rpx solid #1976d2;
  border-bottom: 13rpx solid transparent;
}
#talkbubble2 {
  width: 580rpx;
  background: #1976d2;
  position: absolute;
  top: 530rpx;
  left: 25rpx;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

#talkbubble2:before {
  content: "";
  position: absolute;
  left: 100%;
  top: 75rpx;
  width: 0;
  height: 0;
  border-top: 13rpx solid transparent;
  border-left: 26rpx solid #1976d2;
  border-bottom: 13rpx solid transparent;
}
.text {
  width: 97%;
  height: 95%;
  word-break: break-all;
  color: white;
  font-size: 30rpx;
}

.comment1-description {
  position: absolute;
  top:370rpx;
  width: 450rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.comment2-description {
  position: absolute;
  top:800rpx;
  width: 450rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.star-pos {
  width: 450rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.stars {
  width: 70rpx;
  height: 70rpx;
  background-size: 70rpx 70rpx;
  transition: 600ms;
}

.img {
  width: 100%;
  height: 100%;
}
