.nav{
    background-color: rgba(255, 255, 255, 0);
}
.mine-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.top{

  display: flex;
  justify-content: center;
}
.top1{
  width: 250rpx;
  height: 250rpx;
}
.nickname{
  margin-bottom: 10rpx;
  text-align: center;
}
.item{
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0);
  margin: 20rpx;
