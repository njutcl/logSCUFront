<!--pages/news/Systemmessage/system/system.wxml-->
<view class='orderInfo-container'>
  <image class='orderInfo-bg' src='/img/mine/mine-bg.jpg'></image>
  <view class='orderInfo-frame'>
    <view class='orderInfo-adress'>系统公告</view>
    <image class='orderInfo-img' src="/img/order/feedback.png" ></image>
    <view class='orderInfo-wxName' >{{announce.title}}</view>
    

    <view class='orderInfo-mainInfo'>
      <view class='orderInfo-mainPart'>
        <view class='orderInfo-mainPart1'>发布时间</view>
        <view class='orderInfo-mainPart2'>{{announce.createdTime}}</view>
      </view>
      <view class='orderInfo-mainPart'>
        <view class='orderInfo-mainPart1'>公告内容</view>
        <view class='orderInfo-mainPart2'>{{announce.content}}</view>
      </view>
 
    </view>

  </view>
  <button class='btn' bindtap="submit" >确认</button>
</view>

