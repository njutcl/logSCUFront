<!--pages/paotui/xiangqing/ownerdetai/ownerdetai.wxml-->
<image class='mine-bg' src='/img/mine/mine-bg.jpg'></image>
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data> 
    </view>
  </view>
  <view class='item'>
      <text class='left'>学号：</text><text class='right'>{{myinfo.studentId}}</text>
    </view>
    <view class='item'>
      <text class='left'>姓名：</text><text class='right'>{{myinfo.name}}</text>
    </view>
    <view class='item'>
     <text class='left'> 信誉积分：</text><text class='right'>{{myinfo.rate}}</text>
     </view>
    <view class='item'>
     <text class='left'> 联系电话：</text><text class='right'>{{myinfo.phone}}</text>
    </view>
   <view class='item1' bindtap="report">
    举报用户
    </view>

<button class='btn' bindtap="blacklist">加入黑名单</button>
</view>

